

<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
           <th>Id</th>
            <th>Title</th>
            <th>Excerpts</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: articles">
        <tr>
            <td data-bind="text: Id"></td>
            <td data-bind="text: Title"></td>
            <td data-bind="text: Excerpts"></td>
            <td data-bind="text: Content"></td>
            <td>
                <input type="button" class="btn btn-danger btn-xs" value=" [x]" data-bind="click: $parent.removeArticle" />
            </td>
            <td>
                <input type="button" class="btn btn-danger btn-xs" value="Details" data-bind="click: $parent.getArticlesDetails" />
            </td>
        </tr>
    </tbody>
</table>
<br />
<input type="button" class="btn btn-default" id="btnGetArticle" value="Refresh" data-bind="click: getArticles" />
