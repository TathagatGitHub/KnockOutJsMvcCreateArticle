<!-- List Div-->
<div id="booklist" data-bind="visible: showList">
    <table class="table table-bordered table-striped table-condensed">
        <thead>

            <tr>
                <th>Book ID</th>
                <th>AuthorId</th>
                <th>Title</th>
                <th>ISBN</th>
                <th>Description</th>
                <th>Synopsis</th>
                <th>ImageUrl</th>
            </tr>
        </thead>

        <tbody data-bind="foreach: books">
            <tr>
                <td data-bind="text: Id"></td>
                <td data-bind="text: AuthorId"></td>
                <td data-bind="text: Title"></td>
                <td data-bind="text: Isbn"></td>
                <td data-bind="text: Description"></td>
                <td data-bind="text: Synopsis"></td>
                <td data-bind="text: ImageUrl"></td>


                <td>
                    <a data-bind="click: $root.bookUpdateForm" class="btn btn-warning">Edit</a>
                </td>
            </tr>
        </tbody>
    </table>

</div>

<!--Edit Div-->
<div data-bind="visible: showEdit">
    <form role="form">
        <div class="form-group form-inline">
            <label for="Title">Id</label>
            <label id="Title" type="text" class="form-control" data-bind="text: Id" />
        </div>
        <div class="form-group form-inline">
            <label for="Title">AuthorId</label>
            <label id="Title" type="text" class="form-control" data-bind="text: AuthorId" />
        </div>
        <div class="form-group form-inline">
            <label for="Title">Isbn</label>
            <label id="Title" type="text" class="form-control" data-bind="text: Isbn" />
        </div>
        <div class="form-group form-inline">
            <label for="Title">Title</label>
            <input id="Title" type="text" class="form-control" data-bind="value: Title" />
        </div>
        <div class="form-group  form-inline">
            <label for="Excerpts">Excerpts</label>
            <input id="Excerpts" type="text" class="form-control" data-bind="value: Description" />
        </div>
        <div class="form-group  form-inline">
            <label for="Content">Content</label>
            <input id="Content" type="text" class="form-control" data-bind="value: Synopsis" />
        </div>
        <div class="form-group  form-inline">
            <label for="Content">Image URL</label>
            <input id="Content" type="text" class="form-control" data-bind="value: ImageUrl" />
        </div>

    </form>
    <input type="button" id="btnUpdateBook" class="btn btn-warning" value="Update" data-bind="click: updateBook" />

</div>